# Database Configuration (use your external MongoDB URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hsse-reporting

# NextAuth Configuration
NEXTAUTH_URL=http://your-ec2-instance-ip:3000
NEXTAUTH_SECRET=your-secure-secret-key-here

# Google Maps API (if using)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Email Configuration (if using Resend)
RESEND_API_KEY=your-resend-api-key

# OpenAI Configuration (if using)
OPENAI_API_KEY=your-openai-api-key

# Application Configuration
NODE_ENV=production
PORT=3000 